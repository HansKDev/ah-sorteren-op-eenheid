{
  "manifest_version": 3,
  "name": "AH.nl sorteren op eenheid",
  "version": "1.0.0",
  "description": "Voegt automatische weergave en sortering toe op AH.nl en AH.be voor €/kg, €/L, €/stuk, €/meter en €/wasbeurt (inclusief promoties).",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ah-unit-sorter@hanskdev",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ah.nl/*",
        "https://www.ah.be/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
